<div>
    <h4>Material: <b>@Html.DisplayFor(model => model.Nome)</b> </h4>
    <hr />
    <div class = "col-md-8">    
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2 list-group-item list-group-item-danger">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10 list-group-item">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2 list-group-item list-group-item-danger">
