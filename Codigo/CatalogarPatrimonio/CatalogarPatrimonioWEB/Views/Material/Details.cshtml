@model CatalogarPatrimonioWEB.Models.MaterialModel

@{
    ViewData["Title"] = "Detalhes do material";
    Layout = "_LayoutInside";
}

<h1>Detalhes</h1>

<div>
    <h4>Material: <b>@Html.DisplayFor(model => model.Nome)</b> </h4>
    <hr />
    <div class = "col-md-8">    
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdTipoMaterial)
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Categoria
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatusSolicitacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatusSolicitacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DeveVincularMaterial)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DeveVincularMaterial)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Valor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Valor)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                <a class="btn btn-primary" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </div>
</div>

