@model CatalogarPatrimonioWEB.Models.MaterialModel

@{
    ViewData["Title"] = "Cadastrar Novo Material";
    Layout = "_LayoutInside";
}

<h1>Novo Material</h1>

<h4>Cadastro de Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoMaterial" class="control-label">Tipo do Material</label>
                <input asp-for="IdTipoMaterial" class="form-control" />
                <span asp-validation-for="IdTipoMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusSolicitacao" class="control-label">Status da Solicitação</label>
                <input asp-for="StatusSolicitacao" class="form-control" />
                <span asp-validation-for="StatusSolicitacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveVincularMaterial" class="control-label">Deve Vincular Material</label>
                <input asp-for="DeveVincularMaterial" class="form-control" />
                <span asp-validation-for="DeveVincularMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
