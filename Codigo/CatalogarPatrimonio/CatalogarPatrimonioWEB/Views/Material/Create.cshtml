@model CatalogarPatrimonioWEB.Models.MaterialModel

@{
    ViewData["Title"] = "Cadastrar Novo Material";
    Layout = "_LayoutInside";
}

<h1>Novo Material</h1>

<hr />
<div class="row">
    <div class="col-md-8">
    <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Cadastro Novo Material</h4>
            </div>
                <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DeveVincularMaterial" class="control-label"></label>
                            <input asp-for="DeveVincularMaterial" class="form-control" />
                            <span asp-validation-for="DeveVincularMaterial" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdTipoMaterial" class="control-label"></label>
                            <input asp-for="IdTipoMaterial" class="form-control" />
                            <span asp-validation-for="IdTipoMaterial" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Valor" class="control-label"></label>
                            <input asp-for="Valor" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">    
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                            <a class="btn btn-primary" asp-action="Index">Cancelar</a>   
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
