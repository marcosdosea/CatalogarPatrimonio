@model IEnumerable<CatalogarPatrimonioWEB.Models.TipomaterialModel>

@{
    ViewData["Title"] = "Início Tipo Material";
    Layout = "_LayoutInside";
}

<h1>Lista dos Tipos de Material</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Tipo de Material</a>
</p>
<div class="card">
    <div class="card-body">
        <table id="tipomaterial" class="table table-bordered table-striped dataTable" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "fas fa-edit" })
                            @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "fas fa-eye" })
                            @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fas fa-trash-alt" })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
