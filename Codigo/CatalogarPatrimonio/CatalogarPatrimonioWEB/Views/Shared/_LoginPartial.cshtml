@using Microsoft.AspNetCore.Identity
@using CatalogarPatrimonioWEB.Areas.Identity.Data

@inject SignInManager<Pessoa> SignInManager
@inject UserManager<Pessoa> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
    </li>
}
else
{
    <li>
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Cadastro</a>
    </li>
    <li>
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Acessar Sistema</a>
    </li>
}