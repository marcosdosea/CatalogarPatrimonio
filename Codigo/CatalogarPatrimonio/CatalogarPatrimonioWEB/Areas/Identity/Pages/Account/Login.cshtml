@page
@model LoginModel

@{
    ViewData["Title"] = "Autenticar-se";
}

@* <h1>@ViewData["Title"]</h1> *@
<div class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <img class="elevation-1" style="width: 100%; opacity: 0.9;" src="~/assets/img/logo/logoColor.jpeg" alt="logo catalogar patrimonio">
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <form id="account" method="post">
                    <h4>Realize sua autenticação</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <div class="input-group">
                            <input asp-for="Input.Email" class="form-control" placeholder="Digite seu email" />
                            <div class="input-group-append">
                                <div class="input-group-text">                                
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <div class="input-group">
                            <input id="password" asp-for="Input.Password" class="form-control" placeholder="Digite sua senha" />
                            <div class="input-group-append">
                                <div class="input-group-text">                                
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                       <input type="checkbox" id="showpass"> Mostrar senha</input><br>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar uma nova conta</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
